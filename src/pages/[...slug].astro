---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/global.css';

export async function getStaticPaths() {
  const pages = await getCollection('pages');
  return pages.map(page => ({
    params: { slug: page.slug },
    props: { page },
  }));
}

const { page } = Astro.props;
const { Content } = await page.render();
---

<BaseLayout title={`${page.data.title} - Humanists of Greater Portland`}>
  <!-- Hero Section -->
  <section class={`text-white py-16 ${page.data.heroGradient || 'bg-gradient-to-br from-[#1e3a5f] to-[#2a4d7f]'}`}>
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">{page.data.title}</h1>
      <p class="text-xl text-[#c8d9ec]">
        {page.data.description}
      </p>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="prose prose-lg max-w-none">
        <Content />
      </div>

      {/* Ten Commitments Section (for About layout) */}
      {page.data.pageLayout === 'about' && page.data.tenCommitments && page.data.tenCommitments.length > 0 && (
        <div class="my-12">
          <h2 class="text-3xl font-bold text-neutral-900 mb-6">The Ten Commitments of Humanism</h2>
          <div class="grid md:grid-cols-2 gap-6">
            {page.data.tenCommitments.map((commitment, index) => (
              <div class="bg-[#f4f7fb] p-6 rounded-lg">
                <h3 class="text-lg font-bold text-[#162d4a] mb-2">{index + 1}. {commitment.title}</h3>
                <p class="text-neutral-700 text-base">
                  {commitment.description}
                </p>
              </div>
            ))}
          </div>
        </div>
      )}

      {/* Contact Info Section (for About layout) */}
      {page.data.pageLayout === 'about' && page.data.contactInfo && (
        <div class="mt-12 bg-[#f4f7fb] rounded-xl p-8">
          <h3 class="text-2xl font-bold text-neutral-900 mb-4">Contact Us</h3>
          <div class="space-y-3">
            {page.data.contactInfo.email && (
              <p class="flex items-center gap-3">
                <svg class="w-5 h-5 text-[#1e3a5f]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <a href={`mailto:${page.data.contactInfo.email}`} class="text-[#1e3a5f] hover:text-[#1e3a5f] font-medium">
                  {page.data.contactInfo.email}
                </a>
              </p>
            )}
            {page.data.contactInfo.location && (
              <p class="flex items-start gap-3">
                <svg class="w-5 h-5 text-[#1e3a5f] mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <span class="text-neutral-700" set:html={page.data.contactInfo.address?.replace(/\n/g, '<br />')} />
              </p>
            )}
          </div>
        </div>
      )}
    </div>
  </section>
</BaseLayout>

<style>
  .prose :global(h2) {
    font-size: 1.5rem;
    font-weight: 700;
    color: #171717;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .prose :global(h3) {
    font-size: 1.25rem;
    font-weight: 700;
    color: #171717;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }

  .prose :global(p) {
    color: #404040;
    line-height: 1.75;
    margin-bottom: 1rem;
  }

  .prose :global(ul) {
    list-style-type: disc;
    list-style-position: inside;
    color: #404040;
    margin-bottom: 1rem;
  }

  .prose :global(li) {
    margin-bottom: 0.5rem;
  }

  .prose :global(a) {
    color: #2563eb;
    text-decoration: underline;
  }

  .prose :global(a:hover) {
    color: #1d4ed8;
  }
</style>
