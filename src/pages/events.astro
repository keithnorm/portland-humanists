---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/global.css';
import { getCollection } from 'astro:content';

const allEvents = await getCollection('events');

// Helper function to parse startTime string to Date
function parseStartTime(startTime: string): Date {
  return new Date(startTime.replace(' ', 'T'));
}

// Separate upcoming and past events
const upcomingEvents = allEvents
  .filter(event => event.data.status === 'upcoming')
  .sort((a, b) => parseStartTime(a.data.startTime).getTime() - parseStartTime(b.data.startTime).getTime()); // Ascending: soonest first

const pastEvents = allEvents
  .filter(event => event.data.status === 'past')
  .sort((a, b) => parseStartTime(b.data.startTime).getTime() - parseStartTime(a.data.startTime).getTime()); // Descending: most recent first

function formatDate(date: Date): string {
  return new Intl.DateTimeFormat('en-US', {
    weekday: 'long',
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  }).format(date);
}

function formatTime(timeString: string): string {
  const [hours, minutes] = timeString.split(' ')[1].split(':');
  const hour = parseInt(hours);
  const ampm = hour >= 12 ? 'PM' : 'AM';
  const displayHour = hour % 12 || 12;
  return `${displayHour}:${minutes} ${ampm}`;
}
---

<BaseLayout title="Events - Humanists of Greater Portland">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-[#1e3a5f] to-[#2a4d7f] text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Sunday Programs</h1>
      <p class="text-xl text-[#c8d9ec] max-w-2xl">
        Join us every Sunday for engaging presentations on science, reason, ethics, and humanist values.
        Attend in person at Friendly House or join us via Zoom.
      </p>
    </div>
  </section>

  <!-- Upcoming Events -->
  <section class="py-16 bg-neutral-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-neutral-900 mb-8">Upcoming Programs</h2>

      {upcomingEvents.length === 0 ? (
        <div class="bg-white rounded-xl p-8 text-center">
          <p class="text-neutral-600">No upcoming events scheduled at this time. Check back soon!</p>
        </div>
      ) : (
        <div class="space-y-6">
          {upcomingEvents.map((event) => (
            <a
              href={`/events/${event.slug}`}
              class="block bg-white rounded-xl shadow-sm hover:shadow-md transition-shadow overflow-hidden"
            >
              <div class="md:flex">
                <div class="md:w-48 bg-gradient-to-br from-[#2a4d7f] to-[#4a90e2] p-8 flex flex-col justify-center items-center text-white">
                  <div class="text-center">
                    <div class="text-3xl font-bold mb-1">
                      {new Intl.DateTimeFormat('en-US', { month: 'short' }).format(parseStartTime(event.data.startTime)).toUpperCase()}
                    </div>
                    <div class="text-5xl font-bold mb-1">
                      {parseStartTime(event.data.startTime).getDate()}
                    </div>
                    <div class="text-lg">
                      {new Intl.DateTimeFormat('en-US', { weekday: 'short' }).format(parseStartTime(event.data.startTime))}
                    </div>
                  </div>
                </div>

                <div class="flex-1 p-6 md:p-8">
                  <h3 class="text-2xl font-bold text-neutral-900 mb-3">
                    {event.data.title}
                  </h3>

                  <div class="space-y-2 mb-4">
                    <div class="flex items-center gap-3 text-neutral-700">
                      <svg class="w-5 h-5 text-[#1e3a5f] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                      </svg>
                      <span>{event.data.presenter} &mdash; {event.data.presenterTitle}</span>
                    </div>

                    <div class="flex items-center gap-3 text-neutral-700">
                      <svg class="w-5 h-5 text-[#1e3a5f] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      <span>{formatTime(event.data.startTime)} - {formatTime(event.data.endTime)}</span>
                    </div>

                    <div class="flex items-center gap-3 text-neutral-700">
                      <svg class="w-5 h-5 text-[#1e3a5f] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                      </svg>
                      <span>{event.data.location}</span>
                    </div>
                  </div>

                  <p class="text-neutral-600 mb-4 line-clamp-2">
                    {event.data.description}
                  </p>

                  <div class="flex items-center gap-4">
                    <span class="inline-flex items-center gap-2 text-[#1e3a5f] font-medium">
                      View Details
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                      </svg>
                    </span>
                  </div>
                </div>
              </div>
            </a>
          ))}
        </div>
      )}
    </div>
  </section>

  <!-- Past Events -->
  {pastEvents.length > 0 && (
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-neutral-900 mb-8">Past Programs</h2>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {pastEvents.map((event) => (
            <div class="bg-neutral-50 rounded-xl overflow-hidden hover:shadow-lg transition-shadow">
              {event.data.youtubeId && (
                <a
                  href={`https://youtube.com/watch?v=${event.data.youtubeId}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="block aspect-video bg-neutral-200 relative group cursor-pointer"
                >
                  <img
                    src={`https://img.youtube.com/vi/${event.data.youtubeId}/hqdefault.jpg`}
                    alt={event.data.title}
                    class="w-full h-full object-cover"
                    onerror="this.src='https://img.youtube.com/vi/${event.data.youtubeId}/0.jpg'"
                  />
                  <div class="absolute inset-0 bg-black bg-opacity-40 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity">
                    <div class="w-16 h-16 bg-red-600 rounded-full flex items-center justify-center">
                      <svg class="w-8 h-8 text-white ml-1" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M8 5v14l11-7z" />
                      </svg>
                    </div>
                  </div>
                </a>
              )}

              <div class="p-6">
                <div class="text-sm text-[#1e3a5f] font-semibold mb-2">
                  {formatDate(parseStartTime(event.data.startTime))}
                </div>
                <a href={`/events/${event.slug}`}>
                  <h3 class="text-xl font-bold text-neutral-900 mb-2 line-clamp-2 hover:text-[#1e3a5f] transition-colors">
                    {event.data.title}
                  </h3>
                </a>
                <p class="text-neutral-600 mb-3">{event.data.presenter}</p>
                <div class="flex items-center gap-4">
                  <a
                    href={`/events/${event.slug}`}
                    class="inline-flex items-center gap-2 text-[#1e3a5f] hover:text-[#1e3a5f] font-medium text-sm"
                  >
                    View Details
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </a>
                  {event.data.youtubeId && (
                    <a
                      href={`https://youtube.com/watch?v=${event.data.youtubeId}`}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="inline-flex items-center gap-2 text-red-600 hover:text-red-700 font-medium text-sm"
                    >
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M8 5v14l11-7z" />
                      </svg>
                      Watch
                    </a>
                  )}
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- CTA Section -->
  <section class="py-16 bg-gradient-to-br from-[#1e3a5f] to-[#2a4d7f] text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold mb-4">Never Miss a Program</h2>
      <p class="text-xl text-[#c8d9ec] mb-8">
        Join our mailing list to receive weekly reminders and updates about upcoming events.
      </p>
      <a href="/join" class="inline-block bg-white text-[#1e3a5f] px-8 py-4 rounded-lg font-bold text-lg hover:bg-[#f4f7fb] transition-colors">
        Join Our Community
      </a>
    </div>
  </section>
</BaseLayout>
