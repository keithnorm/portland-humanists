---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/global.css';
import { getCollection } from 'astro:content';

const allEvents = await getCollection('events');

// Get upcoming events and sort by date
const upcomingEvents = allEvents
  .filter(event => event.data.status === 'upcoming')
  .sort((a, b) => new Date(a.data.date).getTime() - new Date(b.data.date).getTime());

// Get the next upcoming event
const upcomingEvent = upcomingEvents[0];

// Get recent past events with recordings
const recentRecordings = allEvents
  .filter(event => event.data.status === 'past' && event.data.youtubeId)
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, 3);

function formatDate(date: Date): string {
  return new Intl.DateTimeFormat('en-US', {
    weekday: 'long',
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  }).format(date);
}

function formatTime(timeString: string): string {
  const [hours, minutes] = timeString.split(' ')[1].split(':');
  const hour = parseInt(hours);
  const ampm = hour >= 12 ? 'PM' : 'AM';
  const displayHour = hour % 12 || 12;
  return `${displayHour}:${minutes} ${ampm}`;
}
---

<BaseLayout>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-[#1e3a5f] via-[#2a4d7f] to-[#4a90e2] text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 md:py-28">
      <div class="max-w-3xl">
        <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight">
          Welcome to the Humanists of Greater Portland
        </h1>
        <p class="text-xl md:text-2xl text-[#c8d9ec] mb-8 leading-relaxed">
          A community of freethinkers dedicated to human well-being, scientific reason,
          and ethical living without supernatural beliefs.
        </p>
        <div class="flex flex-wrap gap-4">
          <a href="#upcoming-event" class="bg-white text-[#1e3a5f] px-6 py-3 rounded-lg font-semibold hover:bg-[#f4f7fb] transition-colors inline-flex items-center gap-2">
            View Next Event
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </a>
          <a href="/join" class="border-2 border-white text-white px-6 py-3 rounded-lg font-semibold hover:bg-white hover:text-[#1e3a5f] transition-colors">
            Join Our Community
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- What is Humanism Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-neutral-900 mb-6">What is Humanism?</h2>
        <p class="text-lg text-neutral-700 leading-relaxed mb-6">
          Humanism is a way of life that guides us to be well and to do good without relying on anything supernatural.
          It's a progressive philosophy that embraces reason, compassion, and the pursuit of knowledge.
        </p>
        <p class="text-lg text-neutral-700 leading-relaxed">
          We welcome atheists, agnostics, truth-seekers, and anyone interested in exploring ethical living,
          critical thinking, and community building based on humanist principles.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8 mt-16">
        <div class="text-center p-6">
          <div class="w-16 h-16 bg-[#e8eef5] rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-[#1e3a5f]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-neutral-900 mb-2">Science & Reason</h3>
          <p class="text-neutral-600">
            We value evidence-based thinking and scientific inquiry as paths to understanding our world.
          </p>
        </div>

        <div class="text-center p-6">
          <div class="w-16 h-16 bg-[#e8eef5] rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-[#1e3a5f]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-neutral-900 mb-2">Community</h3>
          <p class="text-neutral-600">
            Building meaningful connections and supporting one another in our shared human experience.
          </p>
        </div>

        <div class="text-center p-6">
          <div class="w-16 h-16 bg-[#e8eef5] rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-[#1e3a5f]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-neutral-900 mb-2">Compassion</h3>
          <p class="text-neutral-600">
            Promoting ethics, social justice, and care for all people through humanist values.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Upcoming Event Section -->
  <section id="upcoming-event" class="py-16 bg-neutral-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-neutral-900 mb-4">Next Sunday Program</h2>
        <p class="text-lg text-neutral-600">Join us in person or via Zoom</p>
      </div>

      {upcomingEvent ? (
        <div class="max-w-4xl mx-auto bg-white rounded-2xl shadow-lg overflow-hidden">
          <div class="md:flex">
            <div class="md:w-2/5 bg-gradient-to-br from-[#2a4d7f] to-[#4a90e2] p-8 flex flex-col justify-center items-center text-white">
              <div class="text-center">
                <div class="text-5xl font-bold mb-2">
                  {new Intl.DateTimeFormat('en-US', { month: 'short' }).format(upcomingEvent.data.date).toUpperCase()}
                </div>
                <div class="text-7xl font-bold mb-2">{upcomingEvent.data.date.getDate()}</div>
                <div class="text-xl">
                  {new Intl.DateTimeFormat('en-US', { weekday: 'long' }).format(upcomingEvent.data.date)}
                </div>
              </div>
            </div>

            <div class="md:w-3/5 p-8">
              <a href={`/events/${upcomingEvent.slug}`}>
                <h3 class="text-2xl font-bold text-neutral-900 mb-4 hover:text-[#1e3a5f] transition-colors">
                  {upcomingEvent.data.title}
                </h3>
              </a>

              <div class="space-y-3 mb-6">
                <div class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-[#1e3a5f] mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                  <div>
                    <div class="font-semibold text-neutral-900">{upcomingEvent.data.presenter}</div>
                    <div class="text-sm text-neutral-600">{upcomingEvent.data.presenterTitle}</div>
                  </div>
                </div>

                <div class="flex items-center gap-3">
                  <svg class="w-5 h-5 text-[#1e3a5f] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span class="text-neutral-700">{formatTime(upcomingEvent.data.startTime)} - {formatTime(upcomingEvent.data.endTime)}</span>
                </div>

                <div class="flex items-center gap-3">
                  <svg class="w-5 h-5 text-[#1e3a5f] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  <span class="text-neutral-700">{upcomingEvent.data.location}</span>
                </div>
              </div>

              <p class="text-neutral-600 mb-6 leading-relaxed">
                {upcomingEvent.data.description}
              </p>

              <div class="flex items-center gap-4">
                {upcomingEvent.data.zoomLink && (
                  <a
                    href={upcomingEvent.data.zoomLink}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors"
                  >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
                    </svg>
                    Join via Zoom
                  </a>
                )}
                <a
                  href={`/events/${upcomingEvent.slug}`}
                  class="inline-flex items-center gap-2 text-[#1e3a5f] hover:text-[#1e3a5f] font-semibold"
                >
                  View Details
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      ) : (
        <div class="max-w-4xl mx-auto bg-white rounded-2xl shadow-lg p-12 text-center">
          <p class="text-neutral-600 text-lg">No upcoming events scheduled at this time. Check back soon!</p>
        </div>
      )}
    </div>
  </section>

  <!-- Recent Recordings Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-end mb-12">
        <div>
          <h2 class="text-3xl md:text-4xl font-bold text-neutral-900 mb-4">Recent Recordings</h2>
          <p class="text-lg text-neutral-600">Catch up on programs you may have missed</p>
        </div>
        <a href="/recordings" class="text-[#1e3a5f] hover:text-[#1e3a5f] font-semibold flex items-center gap-2">
          View All
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {recentRecordings.map(event => (
          <div class="bg-neutral-50 rounded-xl overflow-hidden hover:shadow-lg transition-shadow">
            <a href={`/events/${event.slug}`}>
              <div class="aspect-video bg-neutral-200 relative group cursor-pointer">
                <img
                  src={`https://img.youtube.com/vi/${event.data.youtubeId}/hqdefault.jpg`}
                  alt={event.data.title}
                  class="w-full h-full object-cover"
                />
                <div class="absolute inset-0 bg-black bg-opacity-40 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity">
                  <div class="w-16 h-16 bg-red-600 rounded-full flex items-center justify-center">
                    <svg class="w-8 h-8 text-white ml-1" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M8 5v14l11-7z" />
                    </svg>
                  </div>
                </div>
              </div>
            </a>
            <div class="p-6">
              <div class="text-sm text-[#1e3a5f] font-semibold mb-2">
                {formatDate(event.data.date)}
              </div>
              <a href={`/events/${event.slug}`}>
                <h3 class="text-xl font-bold text-neutral-900 mb-2 hover:text-[#1e3a5f] transition-colors">
                  {event.data.title}
                </h3>
              </a>
              <p class="text-neutral-600">{event.data.presenter}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-gradient-to-br from-[#1e3a5f] to-[#2a4d7f] text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">Ready to Join Our Community?</h2>
      <p class="text-xl text-[#c8d9ec] mb-8 max-w-2xl mx-auto">
        Become a member and connect with fellow humanists. Support our programs, scholarship funds,
        and community outreach initiatives.
      </p>
      <a href="/join" class="inline-block bg-white text-[#1e3a5f] px-8 py-4 rounded-lg font-bold text-lg hover:bg-[#f4f7fb] transition-colors">
        Become a Member Today
      </a>
    </div>
  </section>
</BaseLayout>
