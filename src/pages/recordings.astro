---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/global.css';
import { getCollection } from 'astro:content';

const allEvents = await getCollection('events');

// Helper function to parse startTime string to Date
function parseStartTime(startTime: string): Date {
  return new Date(startTime.replace(' ', 'T'));
}

// Get only past events with YouTube IDs, sorted by actual event date
const recordedEvents = allEvents
  .filter(event => event.data.status === 'past' && event.data.youtubeId)
  .sort((a, b) => parseStartTime(b.data.startTime).getTime() - parseStartTime(a.data.startTime).getTime());

function formatDate(date: Date): string {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  }).format(date);
}
---

<BaseLayout title="Recordings - Humanists of Greater Portland">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-[#1e3a5f] to-[#2a4d7f] text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Past Recordings</h1>
      <p class="text-xl text-[#c8d9ec] max-w-2xl">
        Watch recordings of our previous Sunday programs. Explore presentations on science, ethics,
        philosophy, and humanist values from our community of speakers.
      </p>
    </div>
  </section>

  <!-- Recordings Grid -->
  <section class="py-16 bg-neutral-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      {recordedEvents.length === 0 ? (
        <div class="bg-white rounded-xl p-12 text-center">
          <svg class="w-16 h-16 text-neutral-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
          </svg>
          <h3 class="text-xl font-semibold text-neutral-900 mb-2">No Recordings Yet</h3>
          <p class="text-neutral-600">Check back soon for recordings of our Sunday programs!</p>
        </div>
      ) : (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {recordedEvents.map((event) => (
            <div class="bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-lg transition-shadow">
              <a href={`https://youtube.com/watch?v=${event.data.youtubeId}`} target="_blank" rel="noopener noreferrer">
                <div class="aspect-video bg-neutral-200 relative group cursor-pointer">
                  <img
                    src={`https://img.youtube.com/vi/${event.data.youtubeId}/hqdefault.jpg`}
                    alt={event.data.title}
                    class="w-full h-full object-cover"
                  />
                  <div class="absolute inset-0 bg-black bg-opacity-40 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity">
                    <div class="w-20 h-20 bg-red-600 rounded-full flex items-center justify-center">
                      <svg class="w-10 h-10 text-white ml-1" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M8 5v14l11-7z" />
                      </svg>
                    </div>
                  </div>
                  <div class="absolute bottom-2 right-2 bg-black bg-opacity-80 text-white text-xs px-2 py-1 rounded">
                    Watch on YouTube
                  </div>
                </div>
              </a>

              <div class="p-6">
                <div class="text-sm text-[#1e3a5f] font-semibold mb-2">
                  {formatDate(parseStartTime(event.data.startTime))}
                </div>
                <h3 class="text-xl font-bold text-neutral-900 mb-2 leading-tight">
                  {event.data.title}
                </h3>
                <div class="flex items-center gap-2 text-neutral-600 mb-3">
                  <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                  <span class="text-sm">{event.data.presenter}</span>
                </div>
                <p class="text-neutral-600 text-sm line-clamp-3 mb-4">
                  {event.data.description}
                </p>
                <a
                  href={`https://youtube.com/watch?v=${event.data.youtubeId}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 text-[#1e3a5f] hover:text-[#1e3a5f] font-medium text-sm"
                >
                  Watch Recording
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                </a>
              </div>
            </div>
          ))}
        </div>
      )}
    </div>
  </section>

  <!-- Subscribe CTA -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="bg-gradient-to-br from-red-50 to-red-100 rounded-2xl p-8 md:p-12">
        <svg class="w-16 h-16 text-red-600 mx-auto mb-4" fill="currentColor" viewBox="0 0 24 24">
          <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
        </svg>
        <h2 class="text-2xl md:text-3xl font-bold text-neutral-900 mb-4">
          Subscribe on YouTube
        </h2>
        <p class="text-lg text-neutral-600 mb-6">
          Don't miss future programs! Subscribe to our YouTube channel to get notified when we upload new recordings.
        </p>
        <a
          href="https://youtube.com/@portlandhumanists"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 bg-red-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-red-700 transition-colors"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
          </svg>
          Subscribe to Our Channel
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
