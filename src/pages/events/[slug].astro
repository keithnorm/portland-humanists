---
import BaseLayout from '../../layouts/BaseLayout.astro';
import '../../styles/global.css';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const events = await getCollection('events');
  return events.map(event => ({
    params: { slug: event.slug },
    props: { event },
  }));
}

const { event } = Astro.props;
const { Content } = await event.render();

function formatDate(date: Date): string {
  return new Intl.DateTimeFormat('en-US', {
    weekday: 'long',
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  }).format(date);
}

function formatTime(timeString: string): string {
  const [hours, minutes] = timeString.split(' ')[1].split(':');
  const hour = parseInt(hours);
  const ampm = hour >= 12 ? 'PM' : 'AM';
  const displayHour = hour % 12 || 12;
  return `${displayHour}:${minutes} ${ampm}`;
}
---

<BaseLayout title={`${event.data.title} - Humanists of Greater Portland`}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-[#1e3a5f] to-[#2a4d7f] text-white py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <a href="/events" class="inline-flex items-center gap-2 text-[#c8d9ec] hover:text-white mb-6 transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to Events
      </a>
      <h1 class="text-4xl md:text-5xl font-bold mb-4">{event.data.title}</h1>
      <p class="text-xl text-[#c8d9ec]">{formatDate(event.data.date)}</p>
    </div>
  </section>

  <!-- Event Details -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-3 gap-8 mb-12">
        <!-- Sidebar -->
        <div class="md:col-span-1">
          <div class="bg-neutral-50 rounded-xl p-6 sticky top-24">
            <h2 class="text-xl font-bold text-neutral-900 mb-4">Event Details</h2>

            <div class="space-y-4">
              <div>
                <div class="flex items-center gap-2 text-neutral-600 mb-1">
                  <svg class="w-5 h-5 text-[#1e3a5f]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  <span class="font-medium">Date</span>
                </div>
                <p class="text-neutral-900 ml-7">{formatDate(event.data.date)}</p>
              </div>

              <div>
                <div class="flex items-center gap-2 text-neutral-600 mb-1">
                  <svg class="w-5 h-5 text-[#1e3a5f]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span class="font-medium">Time</span>
                </div>
                <p class="text-neutral-900 ml-7">
                  {formatTime(event.data.startTime)} - {formatTime(event.data.endTime)}
                </p>
              </div>

              <div>
                <div class="flex items-center gap-2 text-neutral-600 mb-1">
                  <svg class="w-5 h-5 text-[#1e3a5f]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  <span class="font-medium">Location</span>
                </div>
                <p class="text-neutral-900 ml-7">{event.data.location}</p>
              </div>

              <div>
                <div class="flex items-center gap-2 text-neutral-600 mb-1">
                  <svg class="w-5 h-5 text-[#1e3a5f]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                  <span class="font-medium">Presenter</span>
                </div>
                <p class="text-neutral-900 ml-7 font-semibold">{event.data.presenter}</p>
                <p class="text-neutral-600 ml-7 text-sm">{event.data.presenterTitle}</p>
              </div>
            </div>

            {event.data.zoomLink && event.data.status === 'upcoming' && (
              <div class="mt-6 pt-6 border-t border-neutral-200">
                <a
                  href={event.data.zoomLink}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="w-full inline-flex items-center justify-center gap-2 bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors"
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
                  </svg>
                  Join via Zoom
                </a>
              </div>
            )}

            {event.data.youtubeId && event.data.status === 'past' && (
              <div class="mt-6 pt-6 border-t border-neutral-200">
                <a
                  href={`https://youtube.com/watch?v=${event.data.youtubeId}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="w-full inline-flex items-center justify-center gap-2 bg-red-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-red-700 transition-colors"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M8 5v14l11-7z" />
                  </svg>
                  Watch Recording
                </a>
              </div>
            )}
          </div>
        </div>

        <!-- Main Content -->
        <div class="md:col-span-2">
          {event.data.youtubeId && event.data.status === 'past' && (
            <div class="mb-8">
              <div class="aspect-video rounded-xl overflow-hidden bg-neutral-900">
                <iframe
                  width="100%"
                  height="100%"
                  src={`https://www.youtube.com/embed/${event.data.youtubeId}`}
                  title={event.data.title}
                  frameborder="0"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                  allowfullscreen
                ></iframe>
              </div>
            </div>
          )}

          <div class="max-w-none">
            <h2 class="text-2xl font-bold text-neutral-900 mb-4">About This Program</h2>
            <p class="text-lg text-neutral-700 leading-relaxed mb-6">{event.data.description}</p>

            <div class="prose-content text-neutral-700 leading-relaxed">
              <Content />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Events -->
  <section class="py-16 bg-neutral-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-2xl font-bold text-neutral-900 mb-4">Interested in More Programs?</h2>
      <p class="text-neutral-600 mb-6">
        Join us every Sunday for engaging presentations on science, reason, ethics, and humanist values.
      </p>
      <a href="/events" class="inline-block bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors">
        View All Events
      </a>
    </div>
  </section>
</BaseLayout>

<style>
  .prose-content :global(h2) {
    font-size: 1.5rem;
    font-weight: 700;
    color: #171717;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .prose-content :global(h3) {
    font-size: 1.25rem;
    font-weight: 700;
    color: #171717;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }

  .prose-content :global(p) {
    margin-bottom: 1rem;
  }

  .prose-content :global(ul) {
    list-style-type: disc;
    list-style-position: inside;
    margin-bottom: 1rem;
    padding-left: 1rem;
  }

  .prose-content :global(li) {
    margin-bottom: 0.5rem;
  }
</style>
